template<class T>
swap(T& a, T& b)
{
    T temp = std::move(a);
    a = std::move(b);
    b = std::move(temp);
}

std::vector<std::string> v;
std::string str = "example";

v.push_back(std::move(str));

v.push_back(std::move("example"));

